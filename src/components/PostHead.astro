---
import { SITE } from '@/consts'
import { isSubpost } from '@/lib/data-utils'
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props

const title = post.data.title || SITE.title
const description = post.data.description || SITE.description
const image = new URL('/og-default.png', Astro.site)
const author =
  post.data.authors && post.data.authors.length > 0
    ? post.data.authors.join(', ')
    : SITE.author

const postUrl = new URL(Astro.url.pathname, Astro.site).href
const postImage = post?.data?.image?.src
  ? `${SITE.href}${post.data.image.src}`
  : image.href
const publishedTime = post.data.date?.toISOString() || new Date().toISOString()
// 若无 updatedDate 字段，则以发布时间作为修改时间
const modifiedTime = publishedTime

// 文章结构化数据（提升 SEO 与 AI/GEO 优化）
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": postImage,
  "datePublished": publishedTime,
  "dateModified": modifiedTime,
  "author": {
    "@type": "Person",
    "name": author,
    "url": SITE.href
  },
  "publisher": {
    "@type": "Organization",
    "name": SITE.title,
    "url": SITE.href,
    "logo": {
      "@type": "ImageObject",
      "url": new URL('/reworkedmeroxdc1.webp', Astro.site).href
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": postUrl
  },
  "url": postUrl,
  ...(post.data.tags && post.data.tags.length > 0 && {
    "keywords": post.data.tags.join(", ")
  })
}
---

<title>{`${title} - ${SITE.title}`}</title>
<meta name="title" content={`${title} - ${SITE.title}`} />
<meta name="description" content={description} />
<link rel="canonical" href={postUrl} />

{isSubpost(post.id) && <meta name="robots" content="noindex" />}

<!-- 增强的 Open Graph 标签（用于 AI/GEO 优化） -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={postImage} />
<meta property="og:image:alt" content={title} />
<meta property="og:type" content="article" />
<meta property="og:locale" content={SITE.locale} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:url" content={postUrl} />
<meta property="article:published_time" content={publishedTime} />
<meta property="article:modified_time" content={modifiedTime} />
<meta property="article:author" content={author} />
{
  post?.data.tags &&
    post.data.tags.map((tag: string) => {
      return <meta property="article:tag" content={tag} />
    })
}

<!-- 增强的 Twitter 卡片标签 -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={postImage} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:creator" content={author} />

<!-- 文章结构化数据脚本（用于 AI/GEO 与富摘要） -->
<script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
